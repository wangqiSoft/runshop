<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_height="0dp">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/home_fragment_category_icon1"
            android:layout_width="30dp"
            android:src="@mipmap/food_door"
            android:layout_marginTop="@dimen/dimens_3dp"
            android:layout_centerHorizontal="true"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/home_fragment_category_icon1"
            android:text="@string/food_door"
            android:textColor="@color/gray"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_12"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/home_fragment_category_icon2"
            android:layout_width="30dp"
            android:src="@mipmap/home_select"
            android:layout_marginTop="@dimen/dimens_3dp"
            android:layout_centerHorizontal="true"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/home_fragment_category_icon2"
            android:text="@string/snack"
            android:textColor="@color/gray"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_12"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/home_fragment_category_icon3"
            android:layout_width="30dp"
            android:src="@mipmap/home_select"
            android:layout_marginTop="@dimen/dimens_3dp"
            android:layout_centerHorizontal="true"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/home_fragment_category_icon3"
            android:text="@string/food_door"
            android:textColor="@color/gray"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_12"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/home_fragment_category_icon4"
            android:layout_width="30dp"
            android:src="@mipmap/home_select"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimens_3dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/home_fragment_category_icon4"
            android:text="@string/food_door"
            android:textColor="@color/gray"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_12"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_height="0dp"></LinearLayout>
</LinearLayout>