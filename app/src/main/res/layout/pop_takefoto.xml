<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/person_detail_selectPhoto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_height="152dp">

        <TextView
            android:id="@+id/erson_detail_camera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="拍照"
            android:textColor="@color/mainBtnColor"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_above="@+id/person_detail_selectPhoto_line1"
            />

        <TextView
            android:id="@+id/person_detail_selectPhoto_line1"
            android:layout_width="match_parent"
            android:background="#E8E8ED"
            android:layout_above="@+id/person_detail_Album"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/person_detail_Album"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="从相册中选取"
            android:textColor="@color/mainBtnColor"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_above="@+id/person_detail_selectPhoto_line2"
            />

        <TextView
            android:id="@+id/person_detail_selectPhoto_line2"
            android:layout_width="match_parent"
            android:layout_above="@+id/person_detail_cancel"
            android:background="#E8E8ED"
            android:layout_height="1dp"
            />
        <TextView
            android:id="@+id/person_detail_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/cancel"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</RelativeLayout>